generator client {
  provider   = "prisma-client-js"
  engineType = "library"
}

datasource db {
  provider = "postgresql"
}

model Company {
  id        String   @id @default(cuid())
  name      String
  segment   String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  users        User[]
  employees    Employee[]
  schedules    Schedule[]
  subscription Subscription?

  @@map("companies")
}

model User {
  id        String   @id @default(cuid())
  email     String   @unique
  password  String
  role      String // admin | manager
  companyId String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  company Company @relation(fields: [companyId], references: [id], onDelete: Cascade)

  @@index([companyId])
  @@index([email])
  @@map("users")
}

model Employee {
  id            String   @id @default(cuid())
  name          String
  role          String
  phone         String
  active        Boolean  @default(true)
  workStartTime String // HH:mm format
  workEndTime   String // HH:mm format
  workDays      Int[] // 0-6 (Sunday to Saturday)
  companyId     String
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt

  company Company @relation(fields: [companyId], references: [id], onDelete: Cascade)
  shifts  Shift[]

  @@index([companyId])
  @@map("employees")
}

model Schedule {
  id        String   @id @default(cuid())
  weekStart DateTime
  companyId String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  company Company @relation(fields: [companyId], references: [id], onDelete: Cascade)
  shifts  Shift[]

  @@index([companyId])
  @@index([weekStart])
  @@map("schedules")
}

model Shift {
  id         String   @id @default(cuid())
  dayOfWeek  Int // 0-6 (Sunday to Saturday)
  startTime  String // HH:mm format
  endTime    String // HH:mm format
  scheduleId String
  employeeId String
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt

  schedule Schedule @relation(fields: [scheduleId], references: [id], onDelete: Cascade)
  employee Employee @relation(fields: [employeeId], references: [id], onDelete: Cascade)

  @@unique([scheduleId, employeeId, dayOfWeek])
  @@index([scheduleId])
  @@index([employeeId])
  @@map("shifts")
}

model Subscription {
  id                           String   @id @default(cuid())
  companyId                    String   @unique
  plan                         String   @default("FREE") // FREE | PRO
  status                       String   @default("INACTIVE") // ACTIVE | INACTIVE
  paymentGatewayCustomerId     String?  @unique
  paymentGatewaySubscriptionId String?
  createdAt                    DateTime @default(now())
  updatedAt                    DateTime @updatedAt

  company Company @relation(fields: [companyId], references: [id], onDelete: Cascade)

  @@index([companyId])
  @@index([paymentGatewayCustomerId])
  @@map("subscriptions")
}
